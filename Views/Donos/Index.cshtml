@model IEnumerable<DogAndPeoples.Models.Donos>

@{
    ViewBag.Title = "Index";
}

<h2>Pessoas</h2>

<p>
    @Html.ActionLink("Incluir", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id })|
                @Html.ActionLink("Visualizar", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>

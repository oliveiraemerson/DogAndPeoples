@model IEnumerable<DogAndPeoples.Models.Caes>

@{
    ViewBag.Title = "Index";
}

<h2>Cães</h2>

<p>
    @Html.ActionLink("Incluir", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Raca)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Raca)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }) |
            @Html.ActionLink("Visualizar", "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>
